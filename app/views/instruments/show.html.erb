<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card bg-light text-dark p-4">
        <h1 class="text-display-3 new-pro-layout">Instrument: <%= @name %></h4>
        <image src="<%= @image %>" class="card-img-top" alt="<%= @name %>">
        <p class="card-text">City: <%= @city %></p>
        <p class="card-text">Genre: <%= @genre %></p>
        <p class="card-text">Description: <%= @description %></p>
        <p class="card-text">Availability: <%= @available %> minutes/day</p>
        <p class="card-text">Price: $<%= @price %></p>
        <div class="d-flex justify-content-between mt-3">
          <% if current_user == @instrument.user %>
            <%= link_to "Edit", edit_instrument_path(@instrument), class: "btn btn-secondary" %>
            <%= link_to "Delete", instrument_path(@instrument), data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
      <div class="mt-3 text-center">

        <% if user_signed_in? %>
          <%= link_to 'Book', new_instrument_booking_path(@instrument), class: 'btn btn-dark' %>
        <% else %>
          <%= link_to 'Log in to book this instrument', new_user_session_path, class: 'btn btn-secondary' %>
        <% end %>
      </div>
      <div class="mt-3 text-center">
        <%= link_to "Back to Instruments", instruments_path, class: 'btn btn-outline-dark' %>
      </div>
    </div>
  </div>
</div>
