<div class="main-container">
  <div class="left-container">
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header bg-transparent border-0 text-center">
              <p id="bookform-title">Book <%= @instrument.name %> @<%= @instrument.city %></p>
            </div>
            <div class="card-body p-4">
              <%= form_for [@instrument, @booking], html: { class: 'form-horizontal' } do |f| %>

                <!-- Start Date Field -->
                <div class="form-group row">
                  <%= f.label :start_date, class: 'col-sm-3 col-form-label font-weight-bold' %>
                  <div class="col-sm-9">
                    <%= f.date_field :start_date, class: 'form-control', required: true %>
                  </div>
                </div>

                <!-- End Date Field -->
                <div class="form-group row">
                  <%= f.label :end_date, class: 'col-sm-3 col-form-label font-weight-bold' %>
                  <div class="col-sm-9">
                    <%= f.date_field :end_date, class: 'form-control', required: true %>
                  </div>
                </div>

                <!-- Additional fields go here -->

                <!-- Submit Button -->
                <div class="form-group row">
                  <div class="col-sm-9 offset-sm-3">
                    <%= f.submit 'Create Booking', class: 'button-27' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="right-container">
    <div class="carousel">
      <div class="carousel-cell">
        <img src="https://res.cloudinary.com/dhet05tdx/image/upload/v1692956781/guitar-player_b_w_gosali.jpg" class="carousel__img">
      </div>
      <div class="carousel-cell">
        <img src="https://res.cloudinary.com/dhet05tdx/image/upload/v1692960732/HD-wallpaper-a-crowd-at-a-concert_xeqz8a.jpg" class="carousel__img">
      </div>
      <div class="carousel-cell">
        <img src="https://res.cloudinary.com/dhet05tdx/image/upload/v1692960545/drums-black_and_white_pciesn.jpg" class="carousel__img">
      </div>
    </div>
  </div>
</div>
